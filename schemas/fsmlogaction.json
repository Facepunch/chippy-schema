{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/chippy-schema/schemas/fsmlogaction.json",
  "title": "SpaceUsurper.FsmLogAction",
  "description": "Write a message to the game's log file. Can be useful for debugging.",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "Log"
      ]
    },
    "message": {
      "description": "Message to write.",
      "allOf": [
        {
          "title": "FsmValue<System.String>",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "$ref": "/chippy-schema/schemas/iscriptfunc.json"
            }
          ]
        }
      ]
    }
  },
  "required": [
    "action"
  ],
  "patternProperties": {
    "\\.sub$": {
      "$ref": "/chippy-schema/schemas/subroutinedata.json"
    },
    "[fF]sm$": {
      "$ref": "/chippy-schema/schemas/fsmdata.json"
    }
  }
}