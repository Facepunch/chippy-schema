{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/chippy-schema/schemas/songsegmentdata.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "sample": {
      "type": "string"
    },
    "actions": {
      "$ref": "/chippy-schema/schemas/actionlist.json"
    },
    "lengthBars": {
      "anyOf": [
        {
          "$ref": "/chippy-schema/schemas/iscriptfunc.json"
        },
        {
          "type": "integer"
        }
      ]
    },
    "next": {
      "anyOf": [
        {
          "$ref": "/chippy-schema/schemas/iscriptfunc.json"
        },
        {
          "type": "string"
        }
      ]
    },
    "volume": {
      "anyOf": [
        {
          "$ref": "/chippy-schema/schemas/iscriptfunc.json"
        },
        {
          "type": "number"
        }
      ]
    },
    "lowpass": {
      "anyOf": [
        {
          "$ref": "/chippy-schema/schemas/iscriptfunc.json"
        },
        {
          "type": "number"
        }
      ]
    },
    "highpass": {
      "anyOf": [
        {
          "$ref": "/chippy-schema/schemas/iscriptfunc.json"
        },
        {
          "type": "number"
        }
      ]
    },
    "#include": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "precacheTextures": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "/chippy-schema/schemas/datapath.json"
          }
        ]
      }
    }
  }
}