{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/chippy-schema/schemas/fsmconditionaction.json",
  "title": "SpaceUsurper.FsmConditionAction",
  "description": "Evaluates a condition before deciding which set of actions to perform next.",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "Condition"
      ]
    },
    "condition": {
      "description": "Condition to evaluate, the result of which will decide which set of actions to perform.",
      "allOf": [
        {
          "title": "FsmValue<System.Boolean>",
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "/chippy-schema/schemas/iscriptfunc.json"
            }
          ]
        }
      ]
    },
    "true": {
      "description": "Optional actions to run if the `condition` evaluated to `true`.",
      "allOf": [
        {
          "type": "array",
          "items": {
            "$ref": "/chippy-schema/schemas/fsmaction.json"
          }
        }
      ]
    },
    "false": {
      "description": "Optional actions to run if the `condition` evaluated to `false`.",
      "allOf": [
        {
          "type": "array",
          "items": {
            "$ref": "/chippy-schema/schemas/fsmaction.json"
          }
        }
      ]
    }
  },
  "required": [
    "action"
  ],
  "patternProperties": {
    "\\.sub$": {
      "$ref": "/chippy-schema/schemas/subroutinedata.json"
    },
    "[fF]sm$": {
      "$ref": "/chippy-schema/schemas/fsmdata.json"
    }
  }
}