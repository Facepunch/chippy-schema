{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/chippy-schema/schemas/songconfigdata.json",
  "type": "object",
  "properties": {
    "properties": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "/chippy-schema/schemas/propertydata.json"
        }
      }
    },
    "beatsPerMinute": {
      "anyOf": [
        {
          "$ref": "/chippy-schema/schemas/iscriptfunc.json"
        },
        {
          "type": "number"
        }
      ]
    },
    "beatsPerBar": {
      "type": "integer"
    },
    "restartOnStageReset": {
      "type": "boolean"
    },
    "layers": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "/chippy-schema/schemas/songlayerdata.json"
        }
      }
    },
    "#include": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "precacheTextures": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "/chippy-schema/schemas/datapath.json"
          }
        ]
      }
    }
  }
}